{
  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio",
        "--config {}"
      ],
      "filetypes": [
        "purescript"
      ],
      "rootPatterns": [
        "bower.json",
        "psc-package.json",
        "spago.dhall"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.hs",
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  }
}
